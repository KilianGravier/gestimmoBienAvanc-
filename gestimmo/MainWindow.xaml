<Window x:Class="gestimmo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gestimmo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Boutons de navigation -->
        <StackPanel Orientation="Horizontal" Background="LightGray" VerticalAlignment="Top">
            <Button Content="Accueil" Margin="10"/>
            <Button Content="Biens" Margin="10" Click="BiensButton_Click"/>
            <Button Content="Interventions" Margin="10"/>
            <Button Content="Prets" Margin="10"/>
        </StackPanel>

        <!-- Contenu de la page -->
        <Grid Grid.Row="1">
            <!-- Le Frame qui hébergera la navigation -->
            <Frame x:Name="MainFrame"/>
        </Grid>
    </Grid>
</Window>
